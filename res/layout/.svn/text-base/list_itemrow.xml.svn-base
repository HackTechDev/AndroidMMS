<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rss_itemrow" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:padding="4px"
	android:orientation="vertical">
	<ImageView android:layout_width="wrap_content" android:id="@+id/ItemImage"
		android:layout_height="wrap_content"></ImageView>

	<TextView android:id="@+id/ItemTitle" android:textSize="18sp"
		android:textStyle="bold" android:layout_width="fill_parent"
		android:gravity="center" android:layout_height="wrap_content" />
	<TextView android:id="@+id/last" android:textSize="14sp"
		android:layout_width="fill_parent" android:paddingLeft="10px"
		android:layout_height="wrap_content" />
</LinearLayout>